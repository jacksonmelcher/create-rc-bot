{
  "name": "create-rc-bot",
  "version": "0.0.2-alpha.0",
  "description": "CLI tool to quickly create a RingCentral MVP bot",
  "main": "lib/index.js",
  "files": [
    "main-template",
    "lib/**/*"
  ],
  "workspaces": [
    "package/*"
  ],
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts my-app",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc",
    "local": "sudo npm i -g && pizza",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacksonmelcher/create-rc-bot.git"
  },
  "keywords": [
    "Glip",
    "RingCentral",
    "Bot"
  ],
  "author": "Jackson Melcher",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacksonmelcher/create-rc-bot/issues"
  },
  "homepage": "https://github.com/jacksonmelcher/create-rc-bot#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^4.1.1",
    "figlet": "^1.5.2",
    "fs-extra": "^10.0.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.4",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.21",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
